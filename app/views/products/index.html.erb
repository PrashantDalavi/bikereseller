<div class = "back">
  <h1>Products</h1>
</div>

<table>
  <div class="container">
  <div class="row">
    <% @products.each do |product| %>
      <div class="col-sm-12 col-md-4 ">
        <%= image_tag(product.image_url, class: "img-fluid") unless product.image_url.nil? %>
        <a><h1><%= product.name %></h1></a>
        <p><%= product.description %></p>
        <hr>
        <p><%= product.color %></p>
        <strong><%= product.price %> â‚¬</strong><br>
        <%= link_to 'Show', product %> |
        <%= link_to 'Edit', edit_product_path(product) %> |
        <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %>
      </div><!-- /col -->
    <% end %>
</div>
</table>

<br>
<div class = "back">
<a><%= link_to 'New Product', new_product_path %></a>
</div>
